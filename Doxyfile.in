PROJECT_NAME = "@PROJECT_NAME@"
OUTPUT_DIRECTORY = @CMAKE_CURRENT_BINARY_DIR@/doc


INPUT = \
    @CMAKE_CURRENT_SOURCE_DIR@/src \
    @CMAKE_CURRENT_SOURCE_DIR@/inc \
    @CMAKE_CURRENT_SOURCE_DIR@/README.md \
    @CMAKE_CURRENT_SOURCE_DIR@/doc/debug.md
FILE_PATTERNS = *.cpp *.hpp
RECURSIVE = YES
SOURCE_BROWSER = YES
USE_MDFILE_AS_MAINPAGE = @CMAKE_CURRENT_SOURCE_DIR@/README.md


GENERATE_HTML = YES
GENERATE_LATEX = NO
WARN_AS_ERROR = NO


# doxygen-awesome-css
GENERATE_TREEVIEW = YES # required!
DISABLE_INDEX = NO
FULL_SIDEBAR = NO
HTML_EXTRA_STYLESHEET = \
    @CMAKE_CURRENT_SOURCE_DIR@/doc/doxygen-awesome-css/doxygen-awesome.css \
    @CMAKE_CURRENT_SOURCE_DIR@/doc/doxygen-awesome-css/doxygen-awesome-sidebar-only.css
HTML_COLORSTYLE = LIGHT # required with Doxygen >= 1.9.5


# use graphviz
HAVE_DOT = YES
CALL_GRAPH = YES
CALLER_GRAPH = YES
COLLABORATION_GRAPH = YES
DOT_IMAGE_FORMAT = svg
